{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "types": [
      "vite/client",
      "unplugin-vue-define-options"
    ]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.md"
  ]
}
